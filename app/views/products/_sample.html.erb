<div class='images'>
  <% for product in @products %>
  <div class='preview' data-id="<%= product.listing_id %>">
    <img src='<%= product.image_url_200x200 %>' alt='<%= product.title %>'>
    <div class='details'>
      <img src="<%= product.image_url_430xN %>"/>
      <h3><%= product.title %></h3>
      <div class='description'><%= product.description %></div>
      <dl>
        <% for property in %w[price user_name city] %>
        <dt><%= property %></dt><dd><%= product.send property %></dd>
        <% end %>
      </dl>
      <h4>Tags</h4>
      <ul>
        <% for tag in product.tags %>
        <li><%= tag %></li>
        <% end %>
      </ul>
      <h4>Materials</h4>
      <ul>
        <% for materials in product.materials %>
        <li><%= materials %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
</div>